<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_splsh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   	android:background="@drawable/splsh" 
   	style="@android:style/Theme.Black.NoTitleBar">

    <TextView
        android:id="@+id/tv_banbenhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="142dp"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="@string/banbenhao"
        android:textColor="#fff"
        android:textSize="12sp" 
        android:textStyle="bold"
        />
    <ProgressBar 
        android:id="@+id/pb_splsh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        
        />

    <TextView
        android:id="@+id/tv_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:textColor="#f00"
        android:textSize="12sp"
        android:visibility="gone"
        android:text="@string/downloadprogress" />
   
</RelativeLayout>
